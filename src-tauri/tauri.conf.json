{
  "$schema": "https://tauri.app/schema.json",
  "productName": "trainsh Doppio",
  "version": "0.11.0",
  "identifier": "sh.train.doppio",
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Doppio",
        "width": 1280,
        "height": 1000,
        "minWidth": 1280,
        "minHeight": 1000,
        "resizable": true,
        "center": true,
        "maximizable": true,
        "devtools": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
