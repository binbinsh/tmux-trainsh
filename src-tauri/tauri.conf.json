{
  "$schema": "https://tauri.app/schema.json",
  "productName": "trainsh Doppio",
  "version": "0.1.0",
  "identifier": "sh.train.doppio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "trainsh Doppio",
        "width": 1600,
        "height": 1000,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true,
        "center": true,
        "maximizable": true,
        "devtools": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}


