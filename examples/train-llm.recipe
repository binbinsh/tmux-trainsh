# train-llm.recipe
# Fine-tune LLM on remote GPU with live monitoring

var MODEL = llama-7b
var EPOCHS = 3
var GPU = vast-4090
var LOCAL_DATA = ~/datasets/alpaca

host gpu = placeholder

# Pick and wait for GPU instance
vast.pick @gpu
vast.wait timeout=5m

# Open tmux session
tmux.open @gpu as work

# Clone repo and setup
@work > git clone https://github.com/me/train /workspace
@work > cd /workspace && uv sync

# Upload training data
$LOCAL_DATA -> @gpu:/workspace/data

# Start training in background
@work > cd /workspace && python train.py --model $MODEL --epochs $EPOCHS &

# Wait for completion
wait @work "Training complete" timeout=2h

# Download results
@gpu:/workspace/output -> ~/models/$MODEL-ft

# Notify and cleanup
notify "Training complete!"
vast.stop
tmux.close @work
