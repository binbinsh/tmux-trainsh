# local-test.recipe
# A simple recipe to test locally without remote servers

var MESSAGE = Hello from trainsh!
var SLEEP_TIME = 2

host local = local

# Open a local tmux session
tmux.open @local as work

# Run some local commands
@work > echo "$MESSAGE"
@work > echo "Current directory: $(pwd)"
@work > echo "Date: $(date)"

# Show some system info
@work > uname -a
@work > echo "Testing sleep for $SLEEP_TIME seconds..."

sleep ${SLEEP_TIME}s

@work > echo "Done sleeping!"

# Notify when complete
notify "Local test completed!"
tmux.close @work
