# transfer-test.recipe
# Test file transfer functionality

var TEST_FILE = /tmp/trainsh-transfer-test.txt

host local = local

tmux.open @local as work

# Create a test file
@work > echo "Transfer test - $(date)" > $TEST_FILE
@work > cat $TEST_FILE

# Test local-to-local transfer (for testing without remote)
$TEST_FILE -> /tmp/trainsh-transfer-copy.txt

@work > echo "Copied file:"
@work > cat /tmp/trainsh-transfer-copy.txt

# Cleanup
@work > rm -f $TEST_FILE /tmp/trainsh-transfer-copy.txt
@work > echo "Transfer test completed!"

notify "Transfer test done!"
tmux.close @work
